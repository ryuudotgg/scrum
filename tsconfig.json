{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "react-jsx",

    "baseUrl": ".",
    "rootDirs": [".", "./.react-router/types"],

    "strict": true,
    "strictNullChecks": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    "types": ["vite/client"],
    "paths": { "~/*": ["./app/*"] }
  },
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*"
  ]
}
